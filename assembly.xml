<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.bz2</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>DISCLAIMER.md</include>
                <include>USAGE.md</include>
                <include>README.md</include>
                <include>license.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>win-drv</directory>
        </fileSet>
        <fileSet>
            <directory>client/target</directory>
            <includes>
                <include>osc-client-fx.jar</include>
                <include>osc-client-web.jar</include>
            </includes>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <includes>
                <include>f3-oscill.hex</include>
                <include>f3-oscill.dfu</include>
            </includes>
            <outputDirectory>firmware</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>